---
interface Props {
  titulo: string
  descripcion: string
}
const { titulo, descripcion } = Astro.props
---

<div class="text-white text-center mt-4">
  <h1
    transition:name="Videoclips"
    class="text-primary-500 text-5xl mt-8 mb-4 font-semibold uppercase"
  >
    {titulo}
  </h1>
  <p class="text-red mb-8 text-2xl">{descripcion}</p>
</div>
